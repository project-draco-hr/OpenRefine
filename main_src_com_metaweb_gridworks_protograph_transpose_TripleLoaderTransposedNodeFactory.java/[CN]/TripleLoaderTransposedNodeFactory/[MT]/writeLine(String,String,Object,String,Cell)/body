{
  if (subject != null && object != null) {
    String s=object instanceof String ? JSONObject.quote((String)object) : object.toString();
    StringBuffer sb=new StringBuffer();
    sb.append("{ \"s\" : \"");
    sb.append(subject);
    sb.append('"');
    sb.append(", \"p\" : \"");
    sb.append(predicate);
    sb.append('"');
    sb.append(", \"o\" : ");
    sb.append(s);
    sb.append(", \"lang\" : ");
    sb.append(lang);
    if (subjectCell != null) {
      sb.append(", \"meta\" : { ");
      sb.append("\"srecon\" : ");
      writeRecon(sb,subjectCell);
      sb.append(" }");
    }
    sb.append(" }");
    writeLine(sb.toString());
  }
}
