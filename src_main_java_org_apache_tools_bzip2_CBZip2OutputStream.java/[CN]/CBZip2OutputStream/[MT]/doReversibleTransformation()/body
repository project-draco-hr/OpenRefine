{
  int i;
  workLimit=workFactor * last;
  workDone=0;
  blockRandomised=false;
  firstAttempt=true;
  mainSort();
  if (workDone > workLimit && firstAttempt) {
    randomiseBlock();
    workLimit=workDone=0;
    blockRandomised=true;
    firstAttempt=false;
    mainSort();
  }
  origPtr=-1;
  for (i=0; i <= last; i++) {
    if (zptr[i] == 0) {
      origPtr=i;
      break;
    }
  }
  ;
  if (origPtr == -1) {
    panic();
  }
}
