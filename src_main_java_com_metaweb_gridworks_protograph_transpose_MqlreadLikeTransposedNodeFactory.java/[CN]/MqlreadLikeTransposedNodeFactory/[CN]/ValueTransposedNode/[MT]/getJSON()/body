{
  if (obj == null) {
    obj=new JSONObject();
    try {
      obj.put("value",node.value);
      obj.put("type",node.valueType);
      if ("/type/text".equals(node.lang)) {
        obj.put("lang",node.lang);
      }
      obj.put("connect","insert");
    }
 catch (    JSONException e) {
      e.printStackTrace();
    }
  }
  return obj;
}
