{
  int b=(256 + bv) % 256;
  if (currentChar != -1) {
    if (currentChar == b) {
      runLength++;
      if (runLength > 254) {
        writeRun();
        currentChar=-1;
        runLength=0;
      }
    }
 else {
      writeRun();
      runLength=1;
      currentChar=b;
    }
  }
 else {
    currentChar=b;
    runLength++;
  }
}
