{
  BufferedInputStream bis=new BufferedInputStream(inputStream);
  String[] recordPath=null;
{
    byte[] buffer=new byte[64 * 1024];
    bis.mark(buffer.length);
    int c=bis.read(buffer);
    bis.reset();
    if (options.containsKey("importer-record-tag")) {
      recordPath=XmlImportUtilities.detectPathFromTag(new ByteArrayInputStream(buffer,0,c),options.getProperty("importer-record-tag"));
    }
 else {
      recordPath=XmlImportUtilities.detectRecordElement(new ByteArrayInputStream(buffer,0,c));
    }
  }
  ImportColumnGroup rootColumnGroup=new ImportColumnGroup();
  XmlImportUtilities.importXml(bis,project,recordPath,rootColumnGroup);
  XmlImportUtilities.createColumnsFromImport(project,rootColumnGroup);
  project.columnModel.update();
}
