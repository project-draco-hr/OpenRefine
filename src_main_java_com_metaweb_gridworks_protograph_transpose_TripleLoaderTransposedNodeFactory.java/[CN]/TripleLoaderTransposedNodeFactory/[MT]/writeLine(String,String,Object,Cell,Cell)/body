{
  if (subject != null && object != null) {
    String s=object instanceof String ? JSONObject.quote((String)object) : object.toString();
    StringBuffer sb=new StringBuffer();
    sb.append("{ \"s\" : \"");
    sb.append(subject);
    sb.append('"');
    sb.append(", \"p\" : \"");
    sb.append(predicate);
    sb.append('"');
    sb.append(", \"o\" : ");
    sb.append(s);
    if (subjectCell != null || objectCell != null) {
      sb.append(", \"meta\" : { ");
      if (subjectCell != null) {
        sb.append("\"srecon\" : ");
        writeRecon(sb,subjectCell);
      }
      if (objectCell != null) {
        if (subjectCell != null) {
          sb.append(", ");
        }
        sb.append("\"orecon\" : ");
        writeRecon(sb,objectCell);
      }
      sb.append(" }");
    }
    sb.append(" }");
    writeLine(sb.toString());
  }
}
