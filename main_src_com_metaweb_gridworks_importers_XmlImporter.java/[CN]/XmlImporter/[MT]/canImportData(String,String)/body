{
  if (contentType != null) {
    contentType=contentType.toLowerCase().trim();
    if ("application/xml".equals(contentType) || "text/xml".equals(contentType) || "application/rss+xml".equals(contentType)|| "application/atom+xml".equals(contentType)) {
      return true;
    }
  }
 else   if (fileName != null) {
    fileName=fileName.toLowerCase();
    if (fileName.endsWith(".xml") || fileName.endsWith(".atom") || fileName.endsWith(".rss")) {
      return true;
    }
  }
  return false;
}
